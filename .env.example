AZURE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/openai/v1/
AZURE_DEPLOYMENT=your-deployment-name

# CosmosDB (optional — app runs without it, but sessions won't persist across restarts)
COSMOS_ENDPOINT=https://your-account.documents.azure.com:443/

# ACA session pool management endpoint (local dev: http://session-container:8080)
POOL_MANAGEMENT_ENDPOINT=http://session-container:8080

# Frontend URL for CORS in production (e.g. https://your-app.azurecontainerapps.io)
FRONTEND_URL=

# Entra ID / MSAL (optional — frontend runs without auth if unset)
# Single app registration: the backend app ID is used as the MSAL client.
NEXT_PUBLIC_ENTRA_TENANT_ID=
NEXT_PUBLIC_ENTRA_BACKEND_CLIENT_ID=
NEXT_PUBLIC_ENTRA_REDIRECT_URI=http://localhost:3000
